<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/nav_header_title">
        <EditTextPreference
            android:defaultValue="@string/binary_size_default"
            android:inputType="numberDecimal"
            android:key="@string/binary_size_key"
            android:persistent="true"
            android:title="@string/binary_size_title" />
        <EditTextPreference
            android:defaultValue="@string/binary_time_default"
            android:inputType="numberDecimal"
            android:key="@string/binary_time_key"
            android:persistent="true"
            android:title="@string/binary_time_title" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <Preference
            android:key="@string/os_key"
            app:summary="@string/os_notices_summary"
            app:title="@string/os_notices"/>

        <Preference
            app:summary="@string/about_summary"
            app:title="@string/about" />

    </PreferenceCategory>

</PreferenceScreen>