<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/display_header">
        <ListPreference
            android:defaultValue="@string/night_mode_auto"
            android:entries="@array/night_mode"
            android:entryValues="@array/night_mode"
            android:summary="@string/night_mode_summary"
            android:key="@string/night_mode_key"
            android:persistent="true"
            android:title="@string/night_mode_title" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/binary_header">
        <EditTextPreference
            android:defaultValue="@string/binary_size_default"
            android:key="@string/binary_size_key"
            android:title="@string/binary_size_title"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <Preference
            app:summary="@string/os_notices_summary"
            app:title="@string/os_notices"
            android:onClick="onOSNoticesClicked"/>

        <Preference
            app:summary="@string/about_summary"
            app:title="@string/about" />

    </PreferenceCategory>

</PreferenceScreen>